.page {
  min-height: 100vh;
  background: #f8f9fa;
  padding-bottom: env(safe-area-inset-bottom);
}

.header {
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #6AB5F3 100%);
  color: white;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.2);
}

.title-container {
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.content {
  padding: 0 30rpx;
}

.card {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.card-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.card-content {
  padding: 30rpx;
}

.text-input {
  width: 100%;
  min-height: 240rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.card-footer {
  padding: 30rpx;
  border-top: 2rpx solid #f5f5f5;
}

.primary-btn {
  background: #4A90E2;
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.primary-btn.loading {
  background: #89c4e1;
}

.btn-text {
  margin-right: 10rpx;
}

.icon-arrow {
  font-size: 32rpx;
}

.preview-container {
  width: 100%;
  min-height: 400rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.preview-image {
  max-width: 100%;
  max-height: 600rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.action-footer {
  display: flex;
  justify-content: space-around;
}

.action-btn {
  background: none;
  border: none;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.action-btn text {
  margin: 6rpx 0;
}

.action-btn .action-desc {
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

.action-btn:after {
  display: none;
}

.tip-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tip-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 60rpx;
  text-align: center;
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
} 